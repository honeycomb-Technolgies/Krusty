{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Krusty Desktop",
  "version": "0.1.0",
  "identifier": "io.krusty.desktop",
  "build": {
    "beforeDevCommand": "cd ../../pwa/app && bun run dev --host --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../../pwa/app && bun install && bun run build",
    "frontendDist": "../../../pwa/app/build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Krusty Desktop",
        "width": 1280,
        "height": 860,
        "minWidth": 1024,
        "minHeight": 680,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-32.png",
      "icons/icon-64.png",
      "icons/icon-128.png",
      "icons/icon-256.png",
      "icons/icon-512.png",
      "icons/icon.png"
    ],
    "publisher": "Krusty",
    "homepage": "https://github.com/honeycomb-Technologies/Krusty",
    "category": "DeveloperTool",
    "shortDescription": "Native Linux desktop shell for the Krusty coding assistant.",
    "longDescription": "Krusty Desktop packages the Krusty PWA in a native Linux app and starts the embedded local server runtime for coding, chat, and project operations.",
    "license": "MIT",
    "licenseFile": "../../../../LICENSE",
    "linux": {
      "deb": {
        "section": "utils",
        "priority": "optional"
      }
    }
  }
}
